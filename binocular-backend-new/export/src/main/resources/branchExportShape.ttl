@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix xs: <http://www.w3.org/2001/XMLSchema#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix binocular: <https://data.inso-world.com/ontology/binocular#> .

binocular:BranchExport a rdfs:Class .
binocular:ChildCommitDetail a rdfs:Class .

binocular:BranchExportShape
    a sh:NodeShape ;
    sh:targetClass binocular:BranchExport ;
    sh:severity sh:Violation ;

    sh:property [
          sh:path binocular:hasBranchName ;
          sh:name "Branch Name" ;
          sh:description "BranchExport must have a branchName." ;
          sh:minCount 1 ;
          sh:maxCount 1 ;
          sh:datatype xsd:string
      ] ;

    sh:property [
          sh:path binocular:hasLatestCommitSha ;
          sh:name "Latest Commit SHA" ;
          sh:description "BranchExport must have a unique commit SHA." ;
          sh:minCount 1 ;
          sh:maxCount 1 ;
          sh:datatype xsd:string
      ] ;

    sh:property [
          sh:path binocular:hasChildCommits ;
          sh:name "Child Commits List" ;
          sh:description "The list of childrenCommits must be present and non-empty." ;
          sh:minCount 1 ;
          sh:node binocular:ChildCommitDetailShape ;
      ] .

binocular:ChildCommitDetailShape
    a sh:NodeShape ;
    sh:targetClass binocular:ChildCommitDetail ;

    sh:property [
          sh:path binocular:hasCommitterId ;
          sh:name "Committer ID" ;
          sh:description "ChildCommitDetail must contain the committerId." ;
          sh:minCount 1 ;
          sh:maxCount 1 ;
          sh:datatype xsd:string
      ] .
